graph TD
    A(("Начало"))
    B[/"Ввод: points, x0"/]
    C["result = 0"]
    D{{"0 <= i <= n-1"}}
    E["term = points[i].y"]
    F{{"0 <= j < n"}}
    COND{"i != j"}
    G["term *= (x0 - points[j].x) / (points[i].x - points[j].x)"]
    H["result += term"]
    I[/"Возврат result"/]
    J(("Конец"))

    A --> B --> C --> D
    D -- true --> E --> F --> COND
    COND -- true --> G --> F
    COND -- false --> F -- false --> H --> D
    D -- false --> I --> J 